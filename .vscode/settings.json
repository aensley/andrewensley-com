{
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#960000",
    "activityBar.activeBorder": "#000000",
    "activityBar.background": "#960000",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#000000",
    "activityBarBadge.foreground": "#e7e7e7",
    "sash.hoverBorder": "#960000",
    "statusBar.background": "#630000",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#960000",
    "statusBarItem.remoteBackground": "#630000",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#630000",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#63000099",
    "titleBar.inactiveForeground": "#e7e7e799"
