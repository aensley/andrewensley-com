{
  "name": "andrewensley-com",
  "version": "2.0.0",
  "description": "AndrewEnsley.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/aensley/andrewensley-com"
  },
  "author": "aensley@users.noreply.github.com",
  "license": "UNLICENSED",
  "private": true,
  "standard": {
    "globals": [
      "Waypoint"
    ],
    "ignore": [
      "/src/assets/js/fontawesome.js"
    ]
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "scripts": {
    "dev": "next",
    "build": "npm run copy:functions && npm run favicon && next build && next export",
    "favicon": "real-favicon generate src/faviconDescription.json src/faviconData.json public",
    "copy:functions": "cp -af src/functions/ functions/",
    "start": "next start",
    "typecheck": "tsc",
    "precommit-msg": "echo Running pre-commit checks...",
    "test": "npm run typecheck && standard src/assets/js/*.js && prettier --check ."
  },
  "dependencies": {
    "@cfworker/sentry": "^1.12.1",
    "classnames": "2.3.1",
    "date-fns": "2.21.3",
    "gray-matter": "4.0.3",
    "next": "latest",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "14.0.2",
    "remark-html": "15.0.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.5.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.0",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "autoprefixer": "10.4.0",
    "cli-real-favicon": "^0.0.8",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.29.4",
    "postcss": "8.4.5",
    "pre-commit": "^1.2.2",
    "prettier": "^2.6.2",
    "tailwindcss": "3.0.5"
  }
}
